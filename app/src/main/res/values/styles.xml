<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_second_primary</item>
        <item name="colorAccent">@color/color_red</item>
    </style>

    <style name="CommonText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="CommonEdit">
        <item name="android:background">@color/color_white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppName" parent="CommonText">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppSlogan" parent="CommonText">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="CommonText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputLogin" parent="CommonEdit">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:maxLines">@integer/max_line_1</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/color_white</item>
    </style>

    <style name="Notification" parent="CommonText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColorSecondary">@color/color_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/color_white</item>
    </style>

    <style name="TextContent">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MenuLabelsStyle" parent="CommonText">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:maxLines">@integer/max_line_1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchFilter" parent="CommonText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
